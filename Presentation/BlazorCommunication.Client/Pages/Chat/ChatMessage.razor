@using BlazorCommunication.Client.Models.Chat
@if (Message.IsSender)
{
    <li class="d-flex justify-content-between mb-4">
        <img src="@Message.Sender.ImgURL" alt="avatar"
             class="rounded-circle d-flex align-self-start me-3 shadow-1-strong" width="60">
        <div class="card">
            <div class="card-header d-flex justify-content-between p-3">
                <p class="fw-bold mb-0">@Message.Sender.FirstName @Message.Sender.LastName</p>
                <p class="text-muted small mb-0"><i class="far fa-clock"></i>@Message.Time.ToString("dd MMMM HH:mm")</p>
            </div>
            <div class="card-body">
                <p class="mb-0">
                    @Message.Message
                </p>
            </div>
        </div>
    </li>
}
else
{
    <li class="d-flex justify-content-between mb-4">
        <div class="card w-100">
            <div class="card-header d-flex justify-content-between p-3">
                <p class="fw-bold mb-0">@Message.Sender.FirstName @Message.Sender.LastName</p>
                <p class="text-muted small mb-0"><i class="far fa-clock"></i> @Message.Time.ToString("dd MMMM HH:mm")</p>
            </div>
            <div class="card-body">
                <p class="mb-0">
                    @Message.Message
                </p>
            </div>
        </div>
        <img src="@Message.Sender.ImgURL" alt="avatar"
             class="rounded-circle d-flex align-self-start ms-3 shadow-1-strong" width="60">
    </li>
}

@code {

    [Parameter]
    public ChatMessageModel Message { get; set; }

}