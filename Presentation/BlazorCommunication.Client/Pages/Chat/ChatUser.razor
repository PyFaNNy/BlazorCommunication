@using BlazorCommunication.Client.Models.Chat
<li class="p-2 border-bottom">
    <a href="#!" class="d-flex justify-content-between">
        <div class="d-flex flex-row">
            <img src="@User.ImgURL" alt="avatar"
                 class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60">
            <div class="pt-1">
                <p class="fw-bold mb-0">@User.FirstName @User.LastName</p>
                <p class="small text-muted">@User.LastMessage</p>
            </div>
        </div>
        <div class="pt-1">
            <p class="small text-muted mb-1">5 mins ago</p>
        </div>
    </a>
</li>

@code {
    [Parameter]
    public ChatUserModel User { get; set; }
}